# Server Configuration
NODE_ENV=development
PORT=3000

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:4300,http://localhost:8100
CORS_ALLOW_LOCALHOST=true

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/coparent?schema=public

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# Hybrid Mode Configuration
USE_FIREBASE=false              # true = Firebase Firestore, false = PostgreSQL
USE_FIREBASE_STORAGE=false      # true = Firebase Storage, false = AWS S3
DOCUMENTS_STORAGE=db            # s3 | firebase | db (store data URLs in DB)
DOCUMENTS_MAX_MB=10             # Max document upload size in MB

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false               # true for port 465, false for other ports
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@coparent.app
EMAIL_FROM_NAME=CoParent

# AWS S3 Storage
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET=coparent-files
CDN_URL=https://cdn.yourapp.com  # Optional - CDN URL for S3 files

# Push Notifications (FCM)
FCM_SERVER_KEY=your-fcm-server-key

# Jobs & Cron
ENABLE_REMINDER_JOB=true
REMINDER_JOB_SCHEDULE=0 9 * * *  # Every day at 9 AM

# Rate Limiting (future)
RATE_LIMIT_WINDOW_MS=900000     # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Redis Cache (future)
REDIS_URL=redis://localhost:6379
ENABLE_CACHE=false

# Logging
LOG_LEVEL=debug                 # debug, info, warn, error
